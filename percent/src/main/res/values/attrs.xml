<resources>
    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="fraction"/>

        <attr name="layout_heightPercent" format="fraction"/>

        <attr name="layout_marginPercent" format="fraction"/>
        <attr name="layout_marginLeftPercent" format="fraction"/>
        <attr name="layout_marginTopPercent" format="fraction"/>
        <attr name="layout_marginRightPercent" format="fraction"/>
        <attr name="layout_marginBottomPercent" format="fraction"/>
        <attr name="layout_marginStartPercent" format="fraction"/>
        <attr name="layout_marginEndPercent" format="fraction"/>
        <attr name="layout_aspectRatio" format="fraction" />

        <!--percent based on who ? parent or window-->
        <attr name="layout_percentBasedOn" format="enum">
            <enum name="parent" value="0"/>
            <enum name="window" value="1"/>
        </attr>
        <!--dimension ratio, such as 9:16 or 0.25 -->
        <attr name="layout_widthDimensionRatio" format="string"/>
        <attr name="layout_heightDimensionRatio" format="string"/>
        <attr name="layout_marginDimensionRatio" format="string"/>
        <attr name="layout_marginLeftDimensionRatio" format="string"/>
        <attr name="layout_marginTopDimensionRatio" format="string"/>
        <attr name="layout_marginRightDimensionRatio" format="string"/>
        <attr name="layout_marginBottomDimensionRatio" format="string"/>
        <attr name="layout_marginStartDimensionRatio" format="string"/>
        <attr name="layout_marginEndDimensionRatio" format="string"/>
    </declare-styleable>
</resources>

